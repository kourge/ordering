{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES6"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },

  "include": ["src/**/*"],

  "exclude": ["node_modules", "src/**/*.test.ts"]
}
